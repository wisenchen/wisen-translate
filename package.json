{
  "name": "wisen-translate",
  "displayName": "Wisen-Translate",
  "description": "鼠标悬浮翻译",
  "version": "1.2.0",
  "publisher": "wisen",
  "icon": "resource/icon.png",
  "keywords": [
    "translate",
    "翻译",
    "Wisen"
  ],
  "repository": {
    "url": "https://github.com/wisenchen/wisen-translate.git"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Wisen translate",
      "type": "object",
      "properties": {
        "WisenTranslate.origin": {
          "type": "string",
          "default": "bing",
          "description": "设置翻译使用的源，可选填，bing、baidu、youdao、google",
          "enum": [
            "baidu",
            "youdao",
            "google",
            "bing"
          ]
        },
        "WisenTranslate.disableHover": {
          "type": "boolean",
          "default": false,
          "description": "是否禁用鼠标悬浮翻译"
        }
      }
    },
    "commands": [
      {
        "command": "Wisen-translate.zh-en",
        "title": "输入中文翻译成英文",
        "category": "Wisen Translate"
      },
      {
        "command": "Wisen-translate.translate-highlight",
        "title": "翻译选中文字",
        "category": "Wisen Translate"
      }
    ],
    "keybindings": [
      {
        "command": "Wisen-translate.zh-en",
        "key": "alt+t",
        "mac": "alt+t"
      },
      {
        "command": "Wisen-translate.translate-highlight",
        "key": "alt+w",
        "mac": "alt+w"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.89.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^5.4.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "bing-translate-api": "^4.0.1",
    "translation.js": "^0.7.15"
  }
}
